@inject NavigationManager Navigation


@foreach (var modulo in Modulos)
{
    <MudMenu FullWidth="false" ActivationEvent="@MouseEvent.MouseOver" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter">
        <ActivatorContent>
            <MudChip T="string" Icon="@GetIcon(modulo.IconModulo)" Style="background-color:var(--main-color-general); color:white;">@modulo.NombreModulo</MudChip>
        </ActivatorContent>
        <ChildContent>
            @foreach (var subModulo in modulo.SubModulos)
            {
                <MudMenuItem OnClick="@(() => Dirreccionar(@subModulo.UrlSubModulo))">@subModulo.NombreSubModulo </MudMenuItem>
            }
         
        </ChildContent>
    </MudMenu>
}
