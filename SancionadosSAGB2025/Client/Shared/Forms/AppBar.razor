@using SancionadosSAGB2025.Shared.Login
<MudAppBar  Elevation="4" Fixed="false" Style="background-color:var(--main-color-general);">
    <MudImage Src="img/logo_PUEBLA_GOB_2025_TOP_RL.svg" Alt="Mony the dog" Elevation="25" Class="rounded-lg" Style="width:150px;" />
    <MudSpacer />
    <MenuOpciones/>
    <MudSpacer />  
    @if(InformacionPerfilBD is not null)
    {
        @if (InformacionPerfilBD.Usuario is not null)
        {
            if (InformacionPerfilBD.Usuario.Nombre is not null)
            {
                <MenuPerfil UsuarioNombre="@InformacionPerfilBD.Usuario?.Nombre" />
            }
        }
    }
</MudAppBar>

@code
{
    [Parameter] public AutenticacionResponse InformacionPerfilBD { get; set; } = new();
}